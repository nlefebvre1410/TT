{% extends 'base.html.twig' %}

{% block body %}
    <h1>Content</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Lang</th>
                <td>{{ content.lang }}</td>
            </tr>
            <tr>
                <th>Online</th>
                <td>{% if content.online %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ content.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ content.slug }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ content.url }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('content_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('content_edit', { 'id': content.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
